---
interface Props {
	title: string;
	date: string;
	url: string;
}

const { title, date, url } = Astro.props;
---

<div class="blog-post">
	<h2><a href={url}>{title}</a></h2>
	<p class="date">{date}</p>
</div>

<style>
	.blog-post {
		background-color: rgba(var(--accent-light), 0.2);
		border-radius: 8px;
		padding: 1rem;
		margin-bottom: 1rem;
		transition: transform 0.3s ease;
	}
	.blog-post:hover {
		transform: translateY(-5px);
	}
	h2 {
		margin: 0;
		font-size: 1.5rem;
	}
	a {
		color: rgb(var(--accent));
		text-decoration: none;
	}
	.date {
		font-size: 0.9rem;
		color: rgba(var(--text), 0.7);
		margin-top: 0.5rem;
	}
</style>
